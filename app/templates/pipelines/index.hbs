<h2>Pipelines</h2>
<div class="row">
  <div class="col s12">

    <span {{action 'newPipeline'}}>
    {{#md-card class="new-panel" title="Click to add new pipeline"}}
      {{#md-card-content}}
	Pipeline description
      {{/md-card-content}}
      {{#md-card-action}}
	<a class="disabled">Edit</a>
	<a class="disabled">Export</a>
	<a class="disabled">Delete</a>
      {{/md-card-action}}
    {{/md-card}}
    </span>

    {{#each model as |pipeline|}}
      {{#md-card}}
	{{#md-card-content}}
	  <span class="card-title black-text">
	    {{inline-edit-model model=pipeline attr='title'}}
	  </span>
	  {{inline-edit-model model=pipeline attr='description' field='textarea'}}
	{{/md-card-content}}
	{{#md-card-action}}
	  {{#link-to 'pipelines.steps' pipeline}}Edit{{/link-to}}
	  <a {{action 'export' pipeline}}>Export</a>
	  <a {{action 'delete' pipeline}}>Delete</a>
	{{/md-card-action}}
      {{/md-card}}
    {{/each}}

  </div>
</div>
